---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
const currentPath = Astro.url.pathname;
---

<a href={url}>
  <div
    class=`w-32 border-t-4 ${currentPath === url ? 'text-amber-300 border-amber-300 dark:text-amber-500 dark:border-amber-500' : 'border-stone-900 dark:border-stone-100'} hover:text-stone-100 hover:border-stone-100 hover:dark:text-amber-500 hover:dark:border-amber-500`
  >
    {title.toUpperCase()}
  </div>
</a>
